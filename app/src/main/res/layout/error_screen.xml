<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/error_screen_img"
            android:src="@drawable/ic_not_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_gravity="center" />

    <TextView
            android:id="@+id/error_screen_title_tv"
            android:text="@string/not_connection_title"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000000" />

    <TextView
            android:id="@+id/error_screen_subtitle_tv"
            android:text="@string/not_connection_subtitle"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>